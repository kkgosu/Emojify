<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="InputCursor" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorControlActivated">?attr/editTextPointerColor</item>
    </style>

    <style name="InputEditText">
        <item name="android:gravity">top|start</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">16dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:theme">@style/InputCursor</item>
        <item name="android:textColor">?attr/editTextColor</item>
    </style>

    <style name="SimpleTextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconGravity">top</item>
        <item name="iconTint">?attr/simpleButtonIconColor</item>
        <item name="android:textColor">?attr/simpleButtonTextColor</item>
        <item name="background">?attr/selectableItemBackground</item>
    </style>

    <style name="MainTextButton" parent="Widget.MaterialComponents.Button">
        <item name="iconGravity">top</item>
        <item name="maxLines">1</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/purple_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>