<resources>
    <!-- Base application theme. -->
    <style name="Theme.Emojify" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Window decor -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="colorControlNormal">@color/purple_500</item>
        <item name="editTextBackground">@color/gray_200</item>
        <item name="android:fontFamily">@font/futurabook</item>
        <item name="fontFamily">@font/futurabook</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.Emojify.Night">
        <item name="colorPrimaryVariant">@color/gray_900</item>
        <item name="editTextBackground">@color/gray_700</item>
    </style>

    <style name="Theme.Emojify.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Emojify.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>